{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "api/Dockerfile",
        "buildContext": "api"
    },
    "deploy": {
        "healthcheckPath": "/api/dashboard/stats",
        "restartPolicyType": "ON_FAILURE"
    }
}