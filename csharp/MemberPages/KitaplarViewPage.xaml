<Page x:Class="KutuphaneOtomasyon.MemberPages.KitaplarViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Kitaplar"
      Background="Transparent">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="ðŸ“š KÃ¼tÃ¼phanedeki Kitaplar" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
        
        <Grid Grid.Row="1" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Modern Arama Ã‡ubuÄŸu -->
            <Border Grid.Column="0" Background="#2d2d42" CornerRadius="22" Height="45" VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="ðŸ”" Grid.Column="0" VerticalAlignment="Center" Margin="15,0,5,0" 
                               FontSize="16" Foreground="#8b8b9e"/>
                    
                    <TextBox x:Name="txtSearch" Grid.Column="1"
                             materialDesign:HintAssist.Hint="Kitap adÄ±, yazar veya tÃ¼r ara..."
                             materialDesign:HintAssist.Foreground="#555570"
                             Background="Transparent" BorderThickness="0"
                             Foreground="White" FontSize="14"
                             VerticalContentAlignment="Center" Padding="5,0,15,0"
                             Height="45" KeyDown="Search_KeyDown"
                             CaretBrush="#3b82f6"/>
                </Grid>
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                </Border.Effect>
            </Border>
            
            <!-- Ara Butonu -->
            <Button Grid.Column="1" Content="Ara" Click="Search_Click"
                    Margin="15,0,0,0" Height="45" Width="100"
                    Background="#3b82f6" Foreground="White" BorderThickness="0"
                    FontSize="14" FontWeight="SemiBold" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="22"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
        
        <Border Grid.Row="2" Background="#1f1f1f" CornerRadius="10">
            <DataGrid x:Name="dgKitaplar" AutoGenerateColumns="False"
                      Background="Transparent" Foreground="White"
                      CanUserAddRows="False" IsReadOnly="True"
                      MouseDoubleClick="DataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding KitapID}" Width="50"/>
                    <DataGridTextColumn Header="Kitap AdÄ±" Binding="{Binding Baslik}" Width="*"/>
                    <DataGridTextColumn Header="Yazar" Binding="{Binding Yazar}" Width="180"/>
                    <DataGridTextColumn Header="TÃ¼r" Binding="{Binding TurAdi}" Width="100"/>
                    <DataGridTextColumn Header="Mevcut" Binding="{Binding MevcutText}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
