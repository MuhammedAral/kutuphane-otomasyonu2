<Window x:Class="KutuphaneOtomasyon.Pages.KitapDetayDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Kitap DetayÄ±" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1e1e2e">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- BaÅŸlÄ±k Bilgileri -->
            <RowDefinition Height="*"/>    <!-- Yorumlar -->
            <RowDefinition Height="Auto"/> <!-- Puan Verme KÄ±smÄ± -->
        </Grid.RowDefinitions>
        
        <!-- Ãœst KÄ±sÄ±m: Kitap Bilgileri -->
        <Border Grid.Row="0" Background="#252536" CornerRadius="15" Padding="20" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Kitap Ä°konu -->
                <Border Grid.Column="0" Width="80" Height="100" Background="#3b82f6" CornerRadius="10" Margin="0,0,20,0">
                    <TextBlock x:Name="txtKapakHarf" Text="ðŸ“˜" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                </Border>
                
                <!-- Bilgiler -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="txtBaslik" Text="Kitap BaÅŸlÄ±ÄŸÄ±" FontSize="20" FontWeight="Bold" Foreground="White" TextWrapping="Wrap"/>
                    <TextBlock x:Name="txtYazar" Text="Yazar AdÄ±" FontSize="14" Foreground="#9ca3af" Margin="0,5,0,0"/>
                    <TextBlock x:Name="txtTur" Text="Kategori â€¢ 2023" FontSize="13" Foreground="#6b7280" Margin="0,5,0,0"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                         <TextBlock Text="â­" Foreground="#f59e0b" VerticalAlignment="Center"/>
                         <TextBlock x:Name="txtOrtalamaPuan" Text="4.5 / 5 (12 DeÄŸerlendirme)" Foreground="#e5e7eb" Margin="5,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Kapat Butonu -->
                <Button Grid.Column="2" Content="Kapat" IsCancel="True"
                        Style="{StaticResource GradientCancelButton}"
                        VerticalAlignment="Top" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
        
        <!-- Orta KÄ±sÄ±m: Yorumlar Listesi -->
        <GroupBox Grid.Row="1" Header="Mevcut Yorumlar" Style="{StaticResource MaterialDesignGroupBox}" 
                  materialDesign:ColorZoneAssist.Mode="Custom" materialDesign:ColorZoneAssist.Background="#2d2d44"
                  materialDesign:ColorZoneAssist.Foreground="White"
                  BorderBrush="#3f3f56" Margin="0,0,0,20">
            <ListView x:Name="lstYorumlar" Background="Transparent" BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#252536" CornerRadius="10" Padding="15" Margin="0,0,0,15" Width="700">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="ðŸ‘¤" Foreground="#8b5cf6" Margin="0,0,8,0" FontSize="16"/>
                                        <TextBlock Text="{Binding AdSoyad}" FontWeight="Bold" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding Tarih, StringFormat=dd.MM.yyyy}" Foreground="#6b7280" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        
                                        <Button Content="Sil" Click="YorumSil_Click" Visibility="{Binding IsDeleteVisible}"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Foreground="#ef4444" Padding="4,0" Height="24" FontSize="11"
                                                VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <materialDesign:RatingBar Value="{Binding Puan}" IsReadOnly="True" Max="5" Height="18" Width="90" Foreground="#f59e0b"/>
                                </StackPanel>
                                
                                <TextBlock Text="{Binding Yorum}" TextWrapping="Wrap" Foreground="#e5e7eb" FontSize="14" LineHeight="20"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GroupBox>
        
        <!-- Alt KÄ±sÄ±m: Puan Ver -->
        <Border Grid.Row="2" Background="#252536" CornerRadius="15" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Bu kitabÄ± puanlayÄ±n:" Foreground="#e5e7eb" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <materialDesign:RatingBar x:Name="ratingUser" Max="5" Value="0" Foreground="#f59e0b" Height="25" Width="120"
                                                  ValueChanged="RatingBar_ValueChanged"/>
                        <TextBlock x:Name="txtUserPuan" Text="0/5" Foreground="#9ca3af" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <TextBox x:Name="txtYorum" materialDesign:HintAssist.Hint="Yorumunuzu buraya yazÄ±n..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                             Background="Transparent" Foreground="White" BorderBrush="#3f3f56"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="GÃ¶nder" Click="Gonder_Click"
                        Style="{StaticResource GradientPrimaryButton}"
                        Width="120" Margin="20,0,0,0" VerticalAlignment="Bottom"/>
            </Grid>
        </Border>
    </Grid>
</Window>
