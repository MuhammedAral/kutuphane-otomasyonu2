                <Button x:Name="btnTopluSil" Click="TopluSil_Click" Visibility="Collapsed"
                        Content="ðŸ—‘ SeÃ§ilenleri Sil" Margin="0,0,10,0"
                        Background="#ef4444" Foreground="White" BorderThickness="0"
                        Height="40" Padding="15,0" FontSize="13" FontWeight="SemiBold">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter x:Name="content" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <TextBlock x:Name="txtTopluSil" Text="" Foreground="#ef4444" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold" Visibility="Collapsed"/>
                <Button Click="ExcelImport_Click" Cursor="Hand" Margin="0,0,8,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="10" Padding="14,8">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#059669" Offset="0"/>
                                        <GradientStop Color="#10b981" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="ðŸ“¥ Excel'den Al" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Click="ExcelExport_Click" Cursor="Hand" Margin="0,0,8,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="10" Padding="14,8">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#0369a1" Offset="0"/>
                                        <GradientStop Color="#0ea5e9" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="ðŸ“¤ Excel'e Aktar" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Click="YeniKitap_Click" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="10" Padding="14,8">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#3b82f6" Offset="0"/>
                                        <GradientStop Color="#8b5cf6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="+ Yeni Kitap" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Arama ve Filtreler -->
        <Border Grid.Row="1" Background="#1a1a2e" CornerRadius="12" Padding="20,15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Modern Arama Kutusu -->
                <Border Grid.Column="0" Background="#252540" CornerRadius="22" Height="45">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="ðŸ”" Grid.Column="0" VerticalAlignment="Center" Margin="15,0,5,0" 
                                   FontSize="16" Foreground="#8b8b9e"/>
                        
                        <TextBox x:Name="txtSearch" Grid.Column="1"
                                 materialDesign:HintAssist.Hint="Kitap adÄ±, yazar veya ISBN ara..."
                                 materialDesign:HintAssist.Foreground="#666680"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="White" FontSize="14"
                                 VerticalContentAlignment="Center" Padding="5,0,15,0"
                                 Height="45" TextChanged="Search_TextChanged"
                                 CaretBrush="#3b82f6"/>
                    </Grid>
                </Border>
                
                <!-- TÃ¼r Filtresi -->
                <Border Grid.Column="1" Background="#252540" CornerRadius="22" Height="45" Margin="15,0,0,0">
                    <ComboBox x:Name="cmbTur" Width="150"
                              materialDesign:HintAssist.Hint="TÃ¼m TÃ¼rler"
                              materialDesign:HintAssist.Foreground="#666680"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Background="Transparent" Foreground="White" FontSize="13" BorderThickness="0"
                              VerticalContentAlignment="Center" Padding="15,0"
                              DisplayMemberPath="TurAdi" SelectedValuePath="TurID"
                              SelectionChanged="Filter_SelectionChanged">
                         <ComboBox.Resources>
                             <SolidColorBrush x:Key="MaterialDesignPaper" Color="#252540"/>
                         </ComboBox.Resources>
                    </ComboBox>
                </Border>

                <!-- Stok Filtresi -->
                <Border Grid.Column="2" Background="#252540" CornerRadius="22" Height="45" Margin="15,0,0,0">
                    <ComboBox x:Name="cmbStok" Width="150"
                              materialDesign:HintAssist.Hint="Stok Durumu"
                              materialDesign:HintAssist.Foreground="#666680"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Background="Transparent" Foreground="White" FontSize="13" BorderThickness="0"
                              VerticalContentAlignment="Center" Padding="15,0"
                              SelectionChanged="Filter_SelectionChanged">
                        <ComboBox.Resources>
                             <SolidColorBrush x:Key="MaterialDesignPaper" Color="#252540"/>
                        </ComboBox.Resources>
                        <ComboBoxItem Content="TÃ¼m Stok" IsSelected="True"/>
                        <ComboBoxItem Content="Stokta Var"/>
                        <ComboBoxItem Content="TÃ¼kendi"/>
                    </ComboBox>
                </Border>
            </Grid>
        </Border>
        
        <!-- SonuÃ§ SayÄ±sÄ± -->
        <TextBlock Grid.Row="2" x:Name="txtSonuc" Text="0 kitap bulundu" 
                   Foreground="#6b7280" FontSize="13" Margin="0,0,0,12"/>
        
        <!-- Modern Tablo -->
        <Border Grid.Row="3" Background="#1a1a2e" CornerRadius="12" Padding="0">
            <DataGrid x:Name="dgKitaplar" AutoGenerateColumns="False"
                      Background="Transparent" Foreground="#e5e7eb"
                      GridLinesVisibility="None"
                      BorderThickness="0"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      SelectionMode="Extended"
                      IsReadOnly="True"
                      FontSize="13"
                      RowHeaderWidth="0"
                      Sorting="DataGrid_Sorting"
                      MouseDoubleClick="DataGrid_DoubleClick"
                      PreviewMouseLeftButtonUp="DataGrid_PreviewMouseLeftButtonUp">
                
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#252540"/>
                        <Setter Property="Foreground" Value="#9ca3af"/>
                        <Setter Property="Padding" Value="15,14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource ModernRowStyle}">
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DataGridRow_PreviewMouseLeftButtonDown"/>
                        <EventSetter Event="PreviewMouseMove" Handler="DataGridRow_PreviewMouseMove"/>
                        <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="15,12"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Foreground" Value="#e5e7eb"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#1e3a8a"/> 
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="60">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox Click="HeaderCheckBox_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="ID" Binding="{Binding KitapID}" Width="60"/>
                    <DataGridTextColumn Header="Kitap AdÄ±" Binding="{Binding Baslik}" Width="*"/>
                    
                    <!-- Yazar sÃ¼tunu sadeleÅŸtirildi (Global stil geÃ§erli) -->
                    <DataGridTemplateColumn Header="Yazar" Width="150" SortMemberPath="Yazar">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Yazar}" VerticalAlignment="Center" 
                                           TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="TÃ¼r" Binding="{Binding TurAdi}" Width="100"/>

                    <DataGridTextColumn Header="Stok" Binding="{Binding StokAdedi}" Width="55">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Mevcut" Binding="{Binding MevcutAdet}" Width="65">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Ä°ÅŸlemler" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="ðŸ‘" Click="Detay_Click" ToolTip="Detay GÃ¶rÃ¼ntÃ¼le"
                                            PreviewMouseLeftButtonDown="ActionButton_PreviewMouseLeftButtonDown"
                                            Width="32" Height="28" FontSize="12"
                                            Background="#6366f1" Foreground="White" BorderThickness="0" Margin="0,0,4,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="âœ" Click="Duzenle_Click" ToolTip="DÃ¼zenle"
                                            PreviewMouseLeftButtonDown="ActionButton_PreviewMouseLeftButtonDown"
                                            Width="32" Height="28" FontSize="12"
                                            Background="#0ea5e9" Foreground="White" BorderThickness="0" Margin="0,0,4,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="ðŸ—‘" Click="Sil_Click" ToolTip="Sil"
                                            PreviewMouseLeftButtonDown="ActionButton_PreviewMouseLeftButtonDown"
                                            Width="32" Height="28" FontSize="12"
                                            Background="#ef4444" Foreground="White" BorderThickness="0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
