<Page x:Class="KutuphaneOtomasyon.Pages.OduncPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Ã–dÃ¼nÃ§ Ä°ÅŸlemleri"
      Background="#1e1e2e">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Gradient -->
        <Border Grid.Row="0" Margin="0,0,0,25">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“š Ã–dÃ¼nÃ§ Ä°ÅŸlemleri" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Kitap Ã¶dÃ¼nÃ§ verme ve iade iÅŸlemlerini yÃ¶netin" 
                               FontSize="13" Foreground="#8b8b9e" Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" Click="YeniOdunc_Click" Cursor="Hand"
                        Height="48" Padding="24,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#3b82f6" Offset="0"/>
                                        <GradientStop Color="#8b5cf6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.4" Color="#3b82f6"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                                    <TextBlock Text="âž•" FontSize="16" VerticalAlignment="Center" Foreground="White"/>
                                    <TextBlock Text="Yeni Ã–dÃ¼nÃ§ Ver" FontSize="14" FontWeight="SemiBold" 
                                               Foreground="White" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.6" Color="#8b5cf6"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
        
        <!-- Ä°statistik KartlarÄ± - Basit ve Temiz -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Aktif Ã–dÃ¼nÃ§ -->
            <Border Grid.Column="0" Background="#252536" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="ðŸ“– Aktif Ã–dÃ¼nÃ§" Foreground="#8b8b9e" FontSize="13" Margin="0,0,0,8"/>
                    <TextBlock x:Name="txtAktifOdunc" Text="0" Foreground="#3b82f6" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            
            <!-- Geciken -->
            <Border Grid.Column="1" Background="#252536" CornerRadius="12" Padding="20" Margin="5,0,5,0">
                <StackPanel>
                    <TextBlock Text="âš ï¸ Geciken" Foreground="#8b8b9e" FontSize="13" Margin="0,0,0,8"/>
                    <TextBlock x:Name="txtGeciken" Text="0" Foreground="#ef4444" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            
            <!-- Toplam Ãœcret -->
            <Border Grid.Column="2" Background="#252536" CornerRadius="12" Padding="20" Margin="5,0,5,0">
                <StackPanel>
                    <TextBlock Text="ðŸ’° Gecikme Ãœcreti" Foreground="#8b8b9e" FontSize="13" Margin="0,0,0,8"/>
                    <TextBlock x:Name="txtToplamUcret" Text="â‚º0.00" Foreground="#f59e0b" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            
            <!-- BugÃ¼n Ä°ade -->
            <Border Grid.Column="3" Background="#252536" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="âœ… BugÃ¼n Ä°ade" Foreground="#8b8b9e" FontSize="13" Margin="0,0,0,8"/>
                    <TextBlock x:Name="txtBugunIade" Text="0" Foreground="#10b981" FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Arama ve Filtreler -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Arama Kutusu -->
            <Border Grid.Column="0" Background="#252536" CornerRadius="8" Height="40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="ðŸ”" Grid.Column="0" VerticalAlignment="Center" Margin="12,0,8,0" 
                               FontSize="14" Foreground="#8b8b9e"/>
                    
                    <TextBox x:Name="txtSearch" Grid.Column="1"
                             materialDesign:HintAssist.Hint="Kitap veya Ã¼ye ara..."
                             materialDesign:HintAssist.Foreground="#666680"
                             Background="Transparent" BorderThickness="0"
                             Foreground="White" FontSize="13"
                             VerticalContentAlignment="Center" Padding="5,0,10,0"
                             TextChanged="Search_TextChanged"
                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                             CaretBrush="#3b82f6"/>
                </Grid>
            </Border>

            <!-- Filtreler -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <RadioButton x:Name="rbTum" Content="TÃ¼mÃ¼" IsChecked="True" Checked="Filter_Changed" 
                             Foreground="#c8c8d8" Margin="0,0,15,0" FontSize="13"/>
                <RadioButton x:Name="rbOdunc" Content="Ã–dÃ¼nÃ§te" Checked="Filter_Changed" 
                             Foreground="#3b82f6" Margin="0,0,15,0" FontSize="13"/>
                <RadioButton x:Name="rbGeciken" Content="Geciken" Checked="Filter_Changed" 
                             Foreground="#ef4444" Margin="0,0,15,0" FontSize="13"/>
                <RadioButton x:Name="rbIade" Content="Ä°ade EdilmiÅŸ" Checked="Filter_Changed" 
                             Foreground="#10b981" FontSize="13"/>
            </StackPanel>
        </Grid>
        
        <!-- DataGrid -->
        <DataGrid x:Name="dgOdunc" Grid.Row="3" AutoGenerateColumns="False"
                  Background="#252536" Foreground="#c8c8d8"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#3a3a4e"
                  BorderThickness="0"
                  CanUserAddRows="False" IsReadOnly="True"
                  RowBackground="#252536"
                  AlternatingRowBackground="#252536"
                  FontSize="13"
                  HeadersVisibility="Column"
                  RowHeight="50">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1e1e2e"/>
                        <Setter Property="Foreground" Value="#8b8b9e"/>
                        <Setter Property="Padding" Value="15,14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="15,10"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Foreground" Value="#e0e0e0"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3a3a55"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3a3a55"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3a3a55"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Kitap" Width="*" MinWidth="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Baslik}" FontWeight="Medium" Foreground="White" 
                                           VerticalAlignment="Center" FontSize="11" TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="Ãœye" Width="*" MinWidth="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding AdSoyad}" Foreground="#c8c8d8" VerticalAlignment="Center" FontSize="11" TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="Ã–dÃ¼nÃ§" Width="85">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding OduncTarihi, StringFormat=dd/MM/yy}" 
                                           Foreground="#8b8b9e" FontSize="10" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="Ä°ade" Width="85">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding BeklenenIadeTarihi, StringFormat=dd/MM/yy}" 
                                           Foreground="#f59e0b" FontSize="10" FontWeight="Medium" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="Gecikme" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding GecikmeGun}" 
                                           Foreground="#ef4444" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="Ãœcret" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding GecikmeUcreti, StringFormat=â‚º{0:F0}}" 
                                           Foreground="#f59e0b" FontWeight="Bold" FontSize="10" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="Durum" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Durum}" FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#10b981"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Durum}" Value="Ã–dÃ¼nÃ§te">
                                                    <Setter Property="Foreground" Value="#3b82f6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Ä°ade Al" Click="IadeAl_Click" 
                                        Background="#10b981" Foreground="White" BorderThickness="0"
                                        Padding="12,6" FontSize="11" FontWeight="SemiBold" Cursor="Hand">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
    </Grid>
</Page>
