                    <DataGridTextColumn Header="KullanÄ±cÄ± AdÄ±" Binding="{Binding KullaniciAdi}" Width="130"/>
                    <DataGridTextColumn Header="Ad Soyad" Binding="{Binding AdSoyad}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="180"/>
                    <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="120"/>
                    <DataGridTemplateColumn Header="Rol" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left"
                                        Background="{Binding Rol, Converter={x:Null}}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#10b981"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Rol}" Value="Yonetici">
