            </StackPanel>
            
            <Button Grid.Column="1" Click="YeniUye_Click" VerticalAlignment="Center" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Padding="14,8">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#3b82f6" Offset="0"/>
