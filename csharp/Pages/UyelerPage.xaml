                <!-- Modern Arama Kutusu -->
                <Border Grid.Column="0" Background="#252540" CornerRadius="22" Height="45">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
