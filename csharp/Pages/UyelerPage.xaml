                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="+ Yeni Ãœye" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        
        <!-- Arama -->
        <Border Grid.Row="1" Background="#1a1a2e" CornerRadius="12" Padding="20,15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Arama Kutusu -->
                <Border Grid.Column="0" Background="#252540" CornerRadius="22" Height="45">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="ðŸ”" Grid.Column="0" VerticalAlignment="Center" Margin="15,0,5,0" 
                                   FontSize="16" Foreground="#8b8b9e"/>
                        
                        <TextBox x:Name="txtSearch" Grid.Column="1"
                                 materialDesign:HintAssist.Hint="Ãœye adÄ±, e-posta veya telefon ara..."
                                 materialDesign:HintAssist.Foreground="#666680"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="White" FontSize="14"
                                 VerticalContentAlignment="Center" Padding="5,0,15,0"
                                 Height="45" TextChanged="Search_TextChanged"
                                 CaretBrush="#3b82f6"/>
                    </Grid>
                </Border>
                
                <!-- Rol Filtresi -->
                <Border Grid.Column="1" Background="#252540" CornerRadius="22" Height="45" Margin="15,0,0,0">
                    <ComboBox x:Name="cmbRol" Width="150"
                              materialDesign:HintAssist.Hint="Rol SeÃ§in"
                              materialDesign:HintAssist.Foreground="#666680"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              Background="Transparent" Foreground="White" FontSize="13" BorderThickness="0"
                              VerticalContentAlignment="Center" Padding="15,0"
                              SelectionChanged="Filter_Changed">
                        <ComboBox.Resources>
                             <SolidColorBrush x:Key="MaterialDesignPaper" Color="#252540"/>
                        </ComboBox.Resources>
                        <ComboBoxItem Content="TÃ¼m Roller" IsSelected="True"/>
                        <ComboBoxItem Content="Ãœyeler"/>
                        <ComboBoxItem Content="YÃ¶neticiler"/>
                    </ComboBox>
                </Border>
            </Grid>
        </Border>
        
        <!-- SonuÃ§ SayÄ±sÄ± -->
        <TextBlock Grid.Row="2" x:Name="txtSonuc" Text="0 Ã¼ye bulundu" 
                   Foreground="#6b7280" FontSize="13" Margin="0,0,0,12"/>
        
        <!-- Tablo -->
        <Border Grid.Row="3" Background="#1a1a2e" CornerRadius="12" Padding="15">
            <DataGrid x:Name="dgUyeler" AutoGenerateColumns="False"
                      Background="Transparent"
                      GridLinesVisibility="None"
                      BorderThickness="0"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      RowBackground="#1a1a2e"
                      AlternatingRowBackground="#252540"
                      RowHeight="45"
                      FontSize="13"
                      Sorting="DataGrid_Sorting">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#252540"/>
                        <Setter Property="Foreground" Value="#9ca3af"/>
                        <Setter Property="Padding" Value="15,12"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="ID" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding [KullaniciID]}" Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="KullanÄ±cÄ± AdÄ±" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding [KullaniciAdi]}" Foreground="White" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Ad Soyad" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding [AdSoyad]}" Foreground="White" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Email" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding [Email]}" Foreground="White" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Telefon" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding [Telefon]}" Foreground="White" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Rol" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#10b981"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding [Rol]}" Value="Yonetici">
                                                    <Setter Property="Background" Value="#8b5cf6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding [Rol]}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Ä°ÅŸlem" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="ðŸ—‘" Click="Sil_Click" ToolTip="Sil"
                                        Width="32" Height="28" FontSize="12"
                                        Background="#ef4444" Foreground="White" BorderThickness="0" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
