            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- BaÅŸlÄ±k ve Butonlar -->
        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
